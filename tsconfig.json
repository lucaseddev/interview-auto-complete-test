{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "ES6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "lib/esm",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src"
  },
  "include": [
    "src",
    "src/utils",
    "src/lib/**/*.ts",
    "src/app/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
